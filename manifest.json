{
    "manifest_version": 2,
    "name": "addic",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [ "*://*.youtube.com/watch*" ],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "logo.png"
    }
} 