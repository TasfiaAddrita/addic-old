{
  "manifest_version": 2,
  "name": "addic",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "page": "./background.html"
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "./dev-popup.html"
  },
  "permissions": ["tabs", "identity", "*://*.youtube.com/*", "storage"]
}
